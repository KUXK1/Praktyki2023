<Window x:Class="AplikacjaKomputerowa.Remove_Project"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplikacjaKomputerowa"
        mc:Ignorable="d"
        Title="Remove_Project" Height="500
        " Width="200" MinWidth="200" MinHeight="500">
    <Grid>
        <ComboBox x:Name="Option" Width="100" Height="25" Margin="0,20,0,0" VerticalAlignment="Top" SelectionChanged="Option_SelectionChanged">
            <ComboBoxItem>Project</ComboBoxItem>
            <ComboBoxItem>Component</ComboBoxItem>

        </ComboBox>
        <Label x:Name="PRJ_NAME" Content="Project:" Margin="0,50,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.624,-0.76" Width="100"/>
        <TextBox x:Name="Prj" Height="23" Margin="0,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="Comp_Name" Content="Component:" Margin="0,109,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.624,-0.76" Width="100"/>
        <TextBox x:Name="Comp" Height="23" Margin="0,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="Ok" Content="OK" Margin="0,0,0,20" VerticalAlignment="Bottom" Width="75" Click="Ok_Click"/>
    </Grid>
</Window>
